{
    "mcpServers": {
        "sequentialthinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "env": [],
            "disabled": false,
            "autoApprove": [
                "sequentialthinking"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": [],
            "disabled": false,
            "autoApprove": [
                "create_entities",
                "create_relations",
                "add_observations",
                "delete_entities",
                "delete_observations",
                "delete_relations",
                "read_graph",
                "search_nodes",
                "open_nodes"
            ]
        },
        "chrome-devtools": {
            "command": "npx",
            "args": [
                "chrome-devtools-mcp@latest"
            ],
            "env": [],
            "disabled": false,
            "autoApprove": [
                "navigate_page",
                "take_snapshot",
                "click",
                "fill",
                "evaluate_script"
            ]
        },
        "firecrawl": {
            "command": "npx",
            "args": [
                "-y",
                "firecrawl-mcp"
            ],
            "env": {
                "FIRECRAWL_API_KEY": "$input:firecrawl_api_key"
            },
            "disabled": false,
            "autoApprove": []
        },
        "playwright": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest"
            ],
            "env": [],
            "disabled": false,
            "autoApprove": [
                "browser_navigate",
                "browser_click",
                "browser_snapshot",
                "browser_fill",
                "browser_evaluate"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {
                "CONTEXT7_API_KEY": "$input:context7_api_key"
            },
            "disabled": false,
            "autoApprove": [
                "resolve-library-id",
                "get-library-docs"
            ]
        },
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "$input:github_token"
            },
            "disabled": false,
            "autoApprove": []
        },
        "gitkraken": {
            "command": "gk",
            "args": [
                "mcp"
            ],
            "env": [],
            "disabled": false,
            "autoApprove": []
        },
        "deepl": {
            "command": "npx",
            "args": [
                "-y",
                "deepl-mcp-server"
            ],
            "env": {
                "DEEPL_API_KEY": "$input:deepl_api_key"
            },
            "disabled": false,
            "autoApprove": [
                "get-source-languages",
                "get-target-languages",
                "translate-text",
                "rephrase-text"
            ]
        }
    }
}