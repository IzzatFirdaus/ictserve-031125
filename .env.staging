APP_NAME="ICTServe"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=https://staging.ictserve.motac.gov.my

APP_LOCALE=ms
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Supported locales for ICTServe (Bahasa Melayu primary, English secondary)
SUPPORTED_LOCALES=ms,en

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# MySQL 8.0+ Primary Database Configuration
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=ictserve_staging
DB_USERNAME=
DB_PASSWORD=

# Redis 7.0+ Cache and Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=7200
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.ictserve.motac.gov.my

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Redis Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=ictserve_staging_cache

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=6379

# Email Configuration for Staging
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@staging.ictserve.motac.gov.my"
MAIL_FROM_NAME="${APP_NAME} Staging"

# AWS Configuration for File Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=ictserve-staging
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Security Settings
SECURE_COOKIES=true
CSRF_COOKIE_SECURE=true
SESSION_SECURE_COOKIE=true
